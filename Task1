<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <style>
        .background-div {
            background-image: url('https://img.freepik.com/free-photo/flat-lay-notebook-with-list-desk_23-2148938724.jpg?w=1380&t=st=1705589139~exp=1705589739~hmac=bf9e192e8095ceb6b0a426d7b81a0d08eae620dade1c54099a7304bc0510370a');
            background-size: cover;
            height: 100vh;
            padding: 20px;
            box-sizing: border-box;
        }

        .center-div {
            text-align: center;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <script>
        // Create a div element
        const div = document.createElement('div');

        // Add class to the div element
        div.classList.add('background-div');

        // Append the div element to the body
        document.body.appendChild(div);

        // Create and style a heading element
        const heading = document.createElement('h1');
        heading.textContent = 'My To-Do List';
        heading.style.color = 'black';
        heading.style.textAlign = 'center';
        div.appendChild(heading);

        // Create and style a paragraph element
        const para = document.createElement('p');
        para.textContent = 'This is a simple to-do list to help you stay organized.';
        para.style.color = 'black';
        para.style.textAlign = 'center';
        div.appendChild(para);

        // Create and style another heading element (h4)
        const heading4 = document.createElement('h4');
        heading4.textContent = 'Read Book';
        heading4.style.color = 'black';
        heading4.style.textAlign = 'center';
        div.appendChild(heading4);

        // Create and style another paragraph element
        const largePara = document.createElement('p');
        largePara.textContent = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut urna eu eros laoreet consequat.';
        largePara.style.color = 'black';
        largePara.style.textAlign = 'center';
        div.appendChild(largePara);

        // Create and style a button
        const buttonDiv = document.createElement('div');
        buttonDiv.classList.add('center-div');
        const button = document.createElement('button');
        button.textContent = 'Add Task';
        button.style.color = 'black';
        button.style.backgroundColor = 'blue';
        buttonDiv.appendChild(button);
        div.appendChild(buttonDiv);

        // Create and style a paragraph for "skip introduction"
        const skipPara = document.createElement('p');
        skipPara.textContent = 'Skip Introduction';
        skipPara.style.color = 'blue';
        skipPara.style.textDecoration = 'underline';
        skipPara.style.textAlign = 'center';
        div.appendChild(skipPara);
    </script>
</body>
</html>








